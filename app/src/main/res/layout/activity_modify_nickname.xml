<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/little_gray"
    android:orientation="vertical">

    <include layout="@layout/layout_common_title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/comm_margin">

        <TextView
            style="@style/text_base_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_nickname" />

        <com.hyf.intelligence.iot.widget.ExtEditText
            android:id="@+id/et_nickname"
            style="@style/singleline_edit_style"
            android:layout_marginTop="@dimen/comm_margin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:maxLength="20"
            android:gravity="center_vertical"
            android:hint="@string/hint_nickname"
            android:drawableBottom="@drawable/underline"
            android:drawablePadding="@dimen/margin_5" />
    </LinearLayout>

</LinearLayout>