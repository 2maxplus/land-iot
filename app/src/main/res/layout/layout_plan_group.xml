<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/little_gray"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        android:background="@drawable/white_round_shape"
        android:padding="@dimen/comm_margin">

        <TextView
            android:id="@+id/tv_planName"
            style="@style/text_base_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_plan_state"
            style="@style/text_base_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_15sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_planName">

            <TextView
                android:id="@+id/tv_pumpRoomName"
                style="@style/text_base_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_15sp" />

            <TextView
                android:id="@+id/tv_frequencyConverterCabinetName"
                style="@style/text_base_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_15sp" />

            <TextView
                android:id="@+id/tv_waterPumpSensorName"
                style="@style/text_base_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_15sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_12"
        android:background="@color/white"
        android:orientation="horizontal"
        android:baselineAligned="false">

            <RelativeLayout
                android:id="@+id/rl_operate_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_login_selector"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btn_operate_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:duplicateParentState="true"
                    android:focusable="false"
                    android:paddingStart="@dimen/comm_margin"
                    android:paddingTop="@dimen/item_padding_tiny"
                    android:paddingEnd="@dimen/comm_margin"
                    android:paddingBottom="@dimen/item_padding_tiny"
                    android:src="@drawable/icon_pause"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_operate_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_15"
                android:background="@drawable/btn_login_selector"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btn_operate_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:duplicateParentState="true"
                    android:focusable="false"
                    android:paddingStart="@dimen/comm_margin"
                    android:paddingTop="@dimen/item_padding_tiny"
                    android:paddingEnd="@dimen/comm_margin"
                    android:paddingBottom="@dimen/item_padding_tiny"
                    android:src="@drawable/icon_stop"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_operate_3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_15"
                android:background="@drawable/btn_login_selector"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btn_operate_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:duplicateParentState="true"
                    android:focusable="false"
                    android:paddingStart="@dimen/comm_margin"
                    android:paddingTop="@dimen/item_padding_tiny"
                    android:paddingEnd="@dimen/comm_margin"
                    android:paddingBottom="@dimen/item_padding_tiny"
                    android:src="@drawable/icon_repeate_exe"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_operate_4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_15"
                android:background="@drawable/btn_login_selector"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btn_operate_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:duplicateParentState="true"
                    android:focusable="false"
                    android:paddingStart="@dimen/comm_margin"
                    android:paddingTop="@dimen/item_padding_tiny"
                    android:paddingEnd="@dimen/comm_margin"
                    android:paddingBottom="@dimen/item_padding_tiny"
                    android:src="@drawable/icon_recovery"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_12sp" />
            </RelativeLayout>

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabIndicatorHeight="2dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/colorPrimary" />

    <View style="@style/h_view_style" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white" />

</LinearLayout>