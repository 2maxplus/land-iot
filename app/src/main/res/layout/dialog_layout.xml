<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:padding="@dimen/comm_margin"
        android:text="title"
        android:textColor="@color/color666"
        android:textSize="@dimen/font_size_16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:lineSpacingExtra="3dp"
        android:paddingLeft="@dimen/padding_15"
        android:paddingTop="@dimen/margin_30"
        android:paddingRight="@dimen/padding_15"
        android:paddingBottom="@dimen/margin_20"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/font_size_14sp" />

    <View
        style="@style/h_view_style"
        android:visibility="gone" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/comm_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/right_text"
            style="@style/dialog_btn_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/confirm" />

        <TextView
            android:id="@+id/left_text"
            style="@style/dialog_btn_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/right_text"
            android:text="@string/cancel" />

    </RelativeLayout>


</LinearLayout>