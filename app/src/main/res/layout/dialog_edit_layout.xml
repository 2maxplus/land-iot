<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_15"
    android:paddingTop="@dimen/padding_15"
    android:paddingRight="@dimen/padding_15">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="title"
        android:textColor="@color/color666"
        android:textSize="@dimen/font_size_16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/comm_margin">
        <EditText
            android:id="@+id/content"
            style="@style/singleline_edit_style"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:drawableBottom="@drawable/underline"
            android:gravity="start|center_vertical"
            android:paddingLeft="@dimen/padding_15"
            android:paddingRight="@dimen/padding_15"
            android:maxLength="20"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/font_size_14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_base_style"
            android:text="MPa"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/right_text"
            style="@style/dialog_btn_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/confirm" />

        <TextView
            android:id="@+id/left_text"
            style="@style/dialog_btn_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/right_text"
            android:text="@string/cancel" />

    </RelativeLayout>


</LinearLayout>